{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["./tsconfig.json"],
        "ecmaVersion": 2020,
        "sourceType": "module",
      },
    },
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "arrow-spacing": 2,
    "camelcase": 1,
    "comma-style": ["error", "last"],
    "curly": ["error", "multi"],
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-await-in-loop": 2,
    "no-invalid-this": 2,
    "no-label-var": 2,
    "no-trailing-spaces": 2,
    "no-useless-catch": 1,
    "no-useless-escape": 0,
    "no-useless-return": 1,
    "no-var": 0,
    "prefer-regex-literals": 1,
    "prefer-spread": 1,
    "semi": 2,
    "semi-spacing": 2,
    "vars-on-top": 1,
    // ts checks
    "no-duplicate-imports": "off",
    "await-thenable": "off",
    "default-param-last": "off",
    "comma-dangle": "off",
    "comma-spacing": "off",
    "indent": "off",
    "keyword-spacing": "off",
    "lines-between-class-members": "off",
    "no-array-constructor": "off",
    "no-dupe-class-members": "off",
    "no-empty-function": "off",
    "no-extra-parens": "off",
    "no-extra-semi": "off",
    "no-loss-of-precision": "off",
    "no-magic-numbers": "off",
    "no-redeclare": "off",
    "no-shadow": "off",
    "no-unused-expressions": "off",
    "no-unused-vars": "off",
    "no-use-before-define": "off",
    "require-await": "off",
    "no-return-await": "off",
    // ts
    "@typescript-eslint/ban-ts-comment": 0,
    "@typescript-eslint/comma-dangle": ["error", "never"],
    "@typescript-eslint/comma-spacing": 2,
    "@typescript-eslint/default-param-last": 2,
    "@typescript-eslint/indent": ["error", "tab", { "SwitchCase": 0 }],
    "@typescript-eslint/keyword-spacing": ["error", { "before": true, "after": true }],
    "@typescript-eslint/lines-between-class-members": ["error", { "exceptAfterOverload": true }],
    "@typescript-eslint/no-array-constructor": 2,
    "@typescript-eslint/no-dupe-class-members": 2,
    "@typescript-eslint/no-duplicate-imports": 2,
    "@typescript-eslint/no-empty-function": 2,
    "@typescript-eslint/no-extra-parens": 2,
    "@typescript-eslint/no-extra-semi": 2,
    "@typescript-eslint/no-loss-of-precision": 2,
    "@typescript-eslint/no-redeclare": 2,
    "@typescript-eslint/no-shadow": 2,
    "@typescript-eslint/no-unused-expressions": 2,
    "@typescript-eslint/no-unused-vars": 2,
    "@typescript-eslint/no-use-before-define": ["error"],
    "@typescript-eslint/require-await": 2,
    "@typescript-eslint/return-await": 2,
    "@typescript-eslint/type-annotation-spacing": 2,
    // ts-lint rules
    "@typescript-eslint/padding-line-between-statements": ["warn", { "blankLine": "always", "prev": ["const", "let", "var"], "next": "*"}, { "blankLine": "any", "prev": ["const", "let", "var"], "next": ["const", "let", "var"]}],
    "@typescript-eslint/array-type": ["warn", {
      "default": "array",
      "readonly": "array"
    }],
    "@typescript-eslint/adjacent-overload-signatures": 1,
    "@typescript-eslint/await-thenable": 2,
    "@typescript-eslint/ban-types": 2,
    "@typescript-eslint/class-literal-property-style": ["error", "getters"],
    "@typescript-eslint/consistent-indexed-object-style": ["error", "index-signature"],
    "@typescript-eslint/consistent-type-definitions": ["error", "type"],
    "@typescript-eslint/consistent-type-imports": ["error", { "prefer": "type-imports" }],
    "@typescript-eslint/explicit-member-accessibility": ["error", { "accessibility": "explicit" }],
    "@typescript-eslint/explicit-module-boundary-types": ["error", {
      "allowArgumentsExplicitlyTypedAsAny": false,
      "allowDirectConstAssertionInArrowFunctions": true,
      "allowedNames": [],
      "allowHigherOrderFunctions": true,
      "allowTypedFunctionExpressions": true
    }],
    "@typescript-eslint/no-this-alias": ["error", {
        "allowDestructuring": false,
        "allowedNames": ["self"]
      }
    ],
    "@typescript-eslint/no-unnecessary-type-arguments": 1,
    "@typescript-eslint/no-unnecessary-type-assertion": 1,
    "@typescript-eslint/no-unsafe-argument": 2,
    "@typescript-eslint/no-unsafe-call": 2,
    "@typescript-eslint/no-unsafe-member-access": 2,
    "@typescript-eslint/no-unsafe-return": 2,
    "@typescript-eslint/no-misused-promises": ["error", { "checksVoidReturn": false }],
    "@typescript-eslint/no-base-to-string": 1,
    "@typescript-eslint/no-confusing-non-null-assertion": 1,
    "@typescript-eslint/no-dynamic-delete": 2,
    "@typescript-eslint/no-empty-interface": ["error", { "allowSingleExtends": false }],
    "@typescript-eslint/no-explicit-any": ["error", { "ignoreRestArgs": false }],
    "@typescript-eslint/no-extra-non-null-assertion": 2,
    "@typescript-eslint/no-floating-promises": 2,
    "@typescript-eslint/no-implicit-any-catch": 2,
    "@typescript-eslint/prefer-readonly": 1,
    "@typescript-eslint/member-delimiter-style": ["error", {
      "multilineDetection": "brackets",
      "multiline": {
          "delimiter": "semi",
          "requireLast": true
      },
      "singleline": {
        "delimiter": "semi",
        "requireLast": false
      },
      "overrides": {
        "typeLiteral": {
          "multiline": { "delimiter": "comma", "requireLast": false },
          "singleline": { "delimiter": "comma", "requireLast": false }
        }
      }
    }],
  }
}